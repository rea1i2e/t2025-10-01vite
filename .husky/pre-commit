echo "🔍 ソースHTMLバリデーションを実行中..."
npm run validate:html:src

if [ $? -ne 0 ]; then
  echo "❌ ソースHTMLバリデーションエラーが検出されました。コミットを中止します。"
  exit 1
fi

echo "🏗️ ビルドテストを実行中..."
npm run validate:build

if [ $? -ne 0 ]; then
  echo "❌ ビルドテストでエラーが検出されました。コミットを中止します。"
  echo "💡 EJSファイルの構文エラーやHTMLの構造エラーを確認してください。"
  exit 1
fi

echo "✅ すべてのバリデーション完了"
echo "✅ HTMLバリデーション完了"